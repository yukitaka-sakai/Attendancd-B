<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "⇦", user_path(date: @first_day.prev_month), class: "btn btn-flat-border" %>
        <%= l(@first_day, format: :middle) %>
        　時間管理表
        <%= link_to "⇨", user_path(date: @first_day.next_month), class: "btn btn-flat-border" %>
      </td>
      <td>指定勤務時間 <%= format_basic_info(@user.work_time) %></td>
      <td colspan="3"><%= format_basic_info(@user.basic_time) %> 基本時間</td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属 <%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名 <%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>      
    </tr>    
  </table>
 </div>
 
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th rowspan="2">残業指示</th>
        <th rowspan="2">指示者</th>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= day.started_at.hour if day.started_at.present? %></td>
          <td><%= day.started_at.min if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= day.finished_at.hour if day.finished_at.present? %></td>
          <td><%= day.finished_at.min if day.finished_at.present? %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

