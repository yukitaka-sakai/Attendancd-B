<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div>
    <h1>勤怠編集画面</h1>
    <table class="table table-bordered table-condensed table-hover" id="table-attendance">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>残業指示</th>
          <th>指示者</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <tr>
            <td><%= l(day.worked_on, format: :short) %></td>
            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
            <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
            <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="center">
    <%= f.submit "まとめて更新", class: "btn btn-md btn-primary" %>
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-md btn-default" %>
  </div>
<% end %>