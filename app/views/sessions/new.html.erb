<% provide(:title, "login") %>
<div class ="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    
      <%= f.label :email, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :password, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
    <p>新規ユーザーですか？<%= link_to "アカウント登録はこちら", signup_path %> </p>
  </div>
</div>